- content_for :sidebar do
  .well
    sidebar stuff

.well
  .functions.pull-right
    = link_to 'Create Lead', new_lead_path
  
  %table.table.table-striped
    %thead
      %tr
        %th
          Name
        %th
          Company
        %th
          Phone
        %th
          Status
        %th
          Assigned to
        %th
          Created Date
        %th
          Actions
    %tbody
      - @leads.each do |lead|
        %tr
          %%td
            = lead.full_name
          %td
            = lead.company
          %td
            = lead.phone
          %td
            = lead.lead_status.to_s.capitalize
          %td
            = lead.assigned_to_id
          %td
            = lead.created_at.to_date
          %td
            = link_to 'Edit', lead_path(lead), class: 'btn btn-mini btn-primary'
            = link_to 'Delete', lead_path(lead), method: 'delete', class: 'btn btn-mini btn-danger', data: {confirm: 'Are you sure that you want to delete this lead?'}