.well
  .form.user-forms
    = form_tag '/auth/identity/callback' do
      = label_tag :auth_key, "Email"
      = text_field_tag :auth_key
      = label_tag :password
      = password_field_tag :password

      = submit_tag 'Login', class: 'btn'

      = link_to 'Forgot Password', forgot_password_path, class: 'btn'